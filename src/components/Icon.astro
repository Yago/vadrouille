---
import Icons from "../types/icons";

type Props = {
  name: Icons;
  className?: string;
};

const { name, className = "" }: Props = Astro.props;
---

<svg
  aria-hidden="true"
  class={`top-[-0.1em] w-[1em] h-[1em] text-[0.7em] inline-flex self-center justify-center items-center relative ${className}`}
>
  <use href={`/icons.svg#${name}`}></use>
</svg>

---
import { defineCollection, z } from "astro:content";
import Icon from "./Icon.astro";
import { categories } from "../content/config";

const categoriesEnum = z.enum(categories);

type Props = {
  name: z.infer<typeof categoriesEnum>;
  className?: string;
};

const { name, className = "" }: Props = Astro.props;

let iconName = "tipi";

switch (name) {
  case "Nature":
    iconName = "forest";
    break;
  default:
    break;
}
---

<Icon name={iconName} className={className} />
